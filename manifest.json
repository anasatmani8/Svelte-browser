{
  "manifest_version": 3,
  "name": "Svelte Hello World Extension",
  "version": "1.0",
  "description": "A simple extension using Svelte",
  "action": {
      "default_title": "Open Extension",
    "default_popup": "popup/dist/index.html"
  },
  "permissions": [
    "storage",
    "identity"
  ],
  "optional_host_permissions":["https://*/*",    "http://*/*"  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "http://localhost:8080/*" 
  ],
"content_security_policy": {
  "extension_pages": "script-src 'self'; object-src 'self';"
},
"web_accessible_resources": [
  {
    "resources": [
      "popup/success.html",
      "popup/cancel.html", "popup/success.js"
    ],
    "matches": ["<all_urls>"]
  }
]


,
  "browser_specific_settings": {
    "gecko": {
      "id": "svelte-simple-extension@example.com",
      "strict_min_version": "109.0"
    }
  }

}
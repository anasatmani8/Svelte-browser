{
  "manifest_version": 2,
  "name": "Svelte Hello World Extension",
  "version": "1.0",
  "description": "A simple extension using Svelte",
  "browser_action": {
    "default_title": "Open Extension",
    "default_popup": "popup/dist/index.html"
  },
  "permissions": [
    "storage",
    "identity",
    "http://localhost:8080/*"
  ],
  "optional_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "popup/success.html",
    "popup/cancel.html",
    "popup/success.js"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self';",
  "browser_specific_settings": {
    "gecko": {
      "id": "svelte-simple-extension@example.com",
      "strict_min_version": "91.0"
    }
  }
}
